    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/background_image"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/name_company"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dim_60">
                <TextView
                    android:id="@+id/company_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:text="FORCE TRAIN BETTER"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_5"
                android:orientation="vertical"
                android:background="@color/secondaryLightColor"
                android:layout_below="@+id/name_company"/>
            <LinearLayout
                android:id="@+id/app_logo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_horizontal"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dim_70"
                    android:layout_height="@dimen/dim_70"
                    android:paddingTop="@dimen/dim_10"
                    android:src="@drawable/app_icon"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginTop="5dp"
                    android:text="CRICKET STATS APP"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="22sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/lato"
                    android:text="Record, moniter and track:"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14sp" />
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/app_logo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/recyclerview">
            </androidx.recyclerview.widget.RecyclerView>




