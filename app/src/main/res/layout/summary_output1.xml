<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor">
        <LinearLayout
            android:id="@+id/name_company"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/secondaryLightColor"
            android:gravity="center_horizontal"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:textSize="30dp"
                android:paddingRight="50dp"
                android:layout_gravity="center_vertical"
                android:text="Summary Output 1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_text_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/name_company">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/primaryDarkColor"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Output 1"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_centerInParent="true"
                    android:text="Orientation"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:text="Frequency"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#3A3333"
                android:layout_height="1dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:background="@color/primaryDarkColor"
                android:layout_marginBottom="40dp"
                android:layout_height="250dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/primaryDarkColor"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/output1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="output 1"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/secondaryTextColor"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/output"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/zero_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="000.00"
                    android:layout_margin="15dp"
                    android:textColor="@color/color_red"
                    android:textSize="40dp"
                    android:gravity="center_vertical"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:background="@color/primaryDarkColor"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/secondaryTextColor"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/avvrage"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="000.00"
                    android:layout_margin="15dp"
                    android:textColor="@color/secondaryLightColor"
                    android:textSize="40dp"
                    android:gravity="center_vertical"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/primaryDarkColor"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Text 1 63%"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/secondaryLightColor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_centerInParent="true"
                    android:text="Text 2 15%"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/secondaryLightColor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:text="Text 3 42%"
                    android:textColor="@color/secondaryLightColor"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>